             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vii.Views.HomePage"
             xmlns:vm="clr-namespace:Vii.ViewModels"
      
             >
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Image  Source="gallery.png"  Grid.Column="1"  HorizontalOptions="StartAndExpand" VerticalOptions="Center"  />
        <Label Grid.Row="1" Grid.Column="1"   Text="SECRET GARDEN" HorizontalOptions="Start" VerticalOptions="Center" />

        <Image  Source="gallery.png" Grid.Column="2"  HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
        
        <Label Grid.Row="1" Grid.Column="2"   Text="AMBER HALL" HorizontalOptions="Start" VerticalOptions="Center" />
        
        <Image  Source="gallery.png" Grid.Column="3"  HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
        
        <Label Grid.Row="1" Grid.Column="3"  Text="RED ROOM" HorizontalOptions="Start" VerticalOptions="Center" />
    </Grid>
