<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
	  <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
  </style>
	<style name="MainTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/merged_logos</item>
    <item name="android:windowNoTitle">true</item>  
    <item name="android:windowFullscreen">true</item>  
    <item name="android:windowContentOverlay">@null</item>  
    <item name="android:windowActionBar">true</item>
		
  </style>

  <!--AlertDialog Colors-->
  <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
	  <!--buttons-->
	  <item name="colorAccent">@android:color/black</item>
	  <!--title-->
	  <item name="android:textColor">@android:color/black</item>
	  <!--text-->
	  <item name="android:textColorPrimary">@android:color/black</item>
	  <!--selection list-->
	  <item name="android:textColorTertiary">@android:color/black</item>
	  <!--background-->
	  <item name="android:background">@android:color/white</item>
 
